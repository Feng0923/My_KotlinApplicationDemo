<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.administrator.my_kotlinapplication">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".mAppWidget"
            android:label="添加">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="gengxin" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/m_app_widget_info" />
        </receiver>

        <service android:name=".mAppwidgeService" />
        <service
            android:name=".MyService"
            android:enabled="true"
            android:exported="true" />
        <service android:name=".MusicService"/>

        <receiver android:name=".MyReceiver">
            <!--指定该BroadcastReceiver所相应的Intent的Action-->
            <intent-filter>
                <action android:name="com.example.Veng.MyBroadcast"></action>
            </intent-filter>
        </receiver>
    </application>

</manifest>